{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@types": ["src/@types/index.ts"],
      "@api": ["src/api/index.ts"],
      "@store": ["src/store/index.ts"],
      "@hooks": ["src/hooks/index.ts"],
      "@utils": ["src/utils/index.ts"],
      "@constants": ["src/constants/index.ts"],
      "@config/*": ["src/config/*"],
      "@components/ui": ["src/components/ui/index.ts"],
      "@components/layout": ["src/components/layout/index.ts"],
      "@components/forms": ["src/components/forms/index.ts"],
      "@components/features": ["src/components/features/index.ts"],
      "@components/common": ["src/components/common/index.ts"],
      "@components": ["src/components"],
      "@pages": ["src/pages/index.ts"]
    },

    /* Strict type-checking options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
